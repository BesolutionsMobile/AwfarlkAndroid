<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScenarioAwfarlk.ScenarioCart.Controller.Cart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/raduis_all_bottom"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/view2"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@color/colorWhite"
                            android:elevation="12dp"
                            android:innerRadius="0dp"
                            android:shape="oval"
                            android:thicknessRatio="2"
                            app:cardBackgroundColor="@color/colorWhite"
                            app:cardCornerRadius="@dimen/_45sdp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/view3"
                                android:layout_width="@dimen/_88sdp"
                                android:layout_height="@dimen/_88sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:elevation="12dp"
                                android:innerRadius="0dp"
                                android:padding="5dp"
                                android:shape="oval"
                                android:thicknessRatio="2"
                                app:cardBackgroundColor="@color/colorPrimaryDark"
                                app:cardCornerRadius="@dimen/_44sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_82sdp"
                                    android:layout_height="@dimen/_82sdp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:elevation="12dp"
                                    android:innerRadius="0dp"
                                    android:padding="5dp"
                                    android:shape="oval"
                                    android:thicknessRatio="2"
                                    app:cardCornerRadius="@dimen/_41sdp">


                                    <ImageView
                                        android:id="@+id/imgPersonalInfo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="5dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/drpicture" />
                                </androidx.cardview.widget.CardView>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".55"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/fullname"
                            android:scaleY=".8"
                            android:scaleX=".8"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Full Name"
                            android:textSize="@dimen/_15sdp"
                            android:gravity="left|center_vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            />


                    </LinearLayout>

                    <EditText
                        android:id="@+id/editNameProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_36sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:drawableEnd="@drawable/star"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="0dp"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/_11sdp"
                        android:singleLine="true"
                        android:inputType="text"
                        android:gravity="center_vertical"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/mailicon"
                            android:scaleX=".9"
                            android:scaleY=".9"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Email"
                            android:textSize="@dimen/_15sdp"
                            android:gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            />


                    </LinearLayout>

                    <EditText
                        android:id="@+id/editEmailProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_36sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:drawableEnd="@drawable/star"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="0dp"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/_11sdp"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:gravity="center_vertical"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/phone"
                            android:scaleX=".95"
                            android:scaleY=".95"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Phone"
                            android:textSize="@dimen/_15sdp"
                            android:gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            />


                    </LinearLayout>

                    <EditText
                        android:id="@+id/editPhoneProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_36sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:drawableEnd="@drawable/star"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="0dp"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/_11sdp"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:gravity="center_vertical"/>



                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_60sdp"
                        android:background="@drawable/raduis_all"
                        android:backgroundTint="@color/colorOrange"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_17sdp"
                        android:textStyle="bold" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:gravity="center">



                    <TextView
                        android:id="@+id/txtChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/colorBlack"
                        android:text="Change Password"
                        android:textStyle="bold"/>





                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/colorTransparentLoading"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorPrimary" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>