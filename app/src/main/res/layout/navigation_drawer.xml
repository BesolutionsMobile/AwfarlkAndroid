                        android:scaleX=".7"
                        android:scaleY=".7"
                        android:src="@drawable/right_arrow" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".03"
                    android:background="@color/colorAccent" />
