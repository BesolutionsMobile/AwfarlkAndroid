<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.AppCompat.Toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5sdp"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_5sdp"
        >

        <ImageView
            android:id="@+id/imgDrawerToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/menu_img"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeCartToolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/_43sdp"
        android:layout_weight=".15">

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX=".6"
            android:scaleY=".6"
            android:src="@drawable/cartmenu"
            android:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/txtCartCounter"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignTop="@id/imgCart"
            android:layout_alignRight="@id/imgCart"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:gravity="center"
            android:background="@drawable/circular_cart_count"
            android:text="99"
            android:maxHeight="@dimen/_17sdp"
            android:maxWidth="@dimen/_17sdp"
            android:textColor="#FFF"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgSearchToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/searchbar"
            android:scaleX=".6"
            android:scaleY=".6"
            android:tint="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".65"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtPageNameToolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Page name"
            android:textSize="@dimen/_17sdp"
            android:textColor="@color/colorWhite"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:maxLines="1"/>


    </LinearLayout>

</LinearLayout>