<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_400sdp"
    app:cardCornerRadius="@dimen/_15sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/raduis_all"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorWhite"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="oval"
                    android:thicknessRatio="2"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="@dimen/_35sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view3"
                        android:layout_width="@dimen/_66sdp"
                        android:layout_height="@dimen/_66sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:elevation="12dp"
                        android:innerRadius="0dp"
                        android:padding="5dp"
                        android:shape="oval"
                        android:thicknessRatio="2"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="@dimen/_33sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:elevation="12dp"
                            android:innerRadius="0dp"
                            android:padding="5dp"
                            android:shape="oval"
                            android:thicknessRatio="2"
                            app:cardCornerRadius="@dimen/_30sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:scaleType="fitXY"
                                    android:scaleX="15"
                                    android:scaleY="15"
                                    android:src="@drawable/sidemenubag" />

                                <ImageView
                                    android:id="@+id/profilePhoto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/appicon2" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight=".1"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="start|center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Product Details"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight=".3"
                    android:background="@drawable/raduis_all_left_orange"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Rs."
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPriceSubItem"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".42"
                android:orientation="vertical"
                android:weightSum="1">


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtProductDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11sdp" />


                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:orientation="vertical"
                android:weightSum="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/raduis_all"
                    android:backgroundTint="@color/colorDrawer"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:gravity="end|center_vertical">

                        <View
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/inc_dec_bg"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_8sdp"/>
                        <TextView
                            android:id="@+id/txtProductDetailsDecrease"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="match_parent"
                            android:gravity="top|center_horizontal"
                            android:text="-"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txtNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:gravity="start|center_vertical">

                        <View
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/inc_dec_bg"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_8sdp"/>
                        <TextView
                            android:id="@+id/txtProductDetailsIncrease"                          android:layout_width="@dimen/_15sdp"
                            android:layout_height="match_parent"
                            android:gravity="top|center_horizontal"
                            android:text="+"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".12"
                android:orientation="vertical"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/raduis_all_orange"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:id="@+id/linearAddToCart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:scaleX=".6"
                            android:scaleY=".6"
                            android:src="@drawable/addtocart"
                            android:tint="@color/colorWhite" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Add To Cart"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_14sdp" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
